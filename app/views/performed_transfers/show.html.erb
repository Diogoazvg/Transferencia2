<div class="panel panel-success">
  <div class="panel-heading">Dados da transferência negada</div>
  <div class="panel-body">
    <table class="table">
      <tbody>
        <h2>De:</h2>
          <tr>
            <th>Nome do aluno</th>
            <th>Descrição do turno</th>
            <th>Período atual</th>
            <th colspan="3"></th>
          </tr>
          <tr>
            <td><%= @performed_transfer.NOME_PESSOA %></td>
            <td><%= @performed_transfer.DESC_TURNO %></td>
            <td><%= @performed_transfer.PERIODO_ATUAL %></td>
          </tr>
      </tbody>
      </table>

    <table class="table">
      <tbody>
        <h2>Para:</h2>
          <tr>
            <th>Código da turma</th>
            <th>Descrição do turno</th>
            <th>Periodo atual</th>
            <th>Justificativa</th>
            <th colspan="3"></th>
          </tr>
          <tr>
            <td><%= @performed_transfer.COD_TURMA %></td>
            <td><%= @performed_transfer.desc_turno %></td>
            <td><%= @performed_transfer.PERIODO_ATUAL %></td>
            <td><%= @performed_transfer.justificativa %></td>
          </tr>
      </tbody>
    </table>

    <div class="authform">
      <td><%= link_to 'Voltar', performed_transfers_path, :class => "btn btn-success"%></td>
    </div>
  </div>
</div>
